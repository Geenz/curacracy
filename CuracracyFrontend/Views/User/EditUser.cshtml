@using CuracracyAPI.Models;
@{var user = (UserResponse)ViewData["Userdata"];
ViewData["Title"] = user.username;
<div class="container">
    @using(Html.BeginForm()) {
        <form role="form" action="javascript:;" method="post" id="login-form" autocomplete="off">
            <div class="form-group">
                <label for="username" class="sr-only">Username</label>
                <input type="username" name="username" id="username" class="form-control" placeholder=@user.username>
            </div>
            <div class="form-group">
                <label for="description" class="sr-only">Description</label>
                <input type="description" name="description" id="description" class="form-control" placeholder=@user.description>
            </div>
            <input type="submit" id="btn-login" class="btn btn-default" value="Update">
        </form>
    }
</div>
}